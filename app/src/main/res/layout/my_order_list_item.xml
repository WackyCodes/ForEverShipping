<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_rectangle_4dp_layout"
    android:layout_margin="2dp"
    android:padding="4dp"
    android:elevation="4dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/order_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_check_circle_24"
        app:tint="@color/colorGreen" />

    <TextView
        android:id="@+id/order_status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="On Way"
        android:textAlignment="center"
        android:textColor="@color/colorGreen"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/order_image"
        app:layout_constraintStart_toEndOf="@+id/order_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="8927921232"
        android:textColor="@color/colorDarkViolet"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/order_status_text_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_shop_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:padding="2dp"
        android:singleLine="true"
        android:text="My Shop"
        android:textColor="@color/colorDarkViolet"
        android:textSize="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_id_text_view" />

    <TextView
        android:id="@+id/order_shop_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:text="(349293)"
        android:textColor="@color/colorDarkGray"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/order_shop_name_text"
        app:layout_constraintTop_toBottomOf="@+id/order_shop_name_text" />

    <TextView
        android:id="@+id/order_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="2 min ago"
        android:textColor="@color/colorDarkGray"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_shop_address_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="2dp"
        android:text="variant : 2 KG"
        android:textColor="@color/colorDarkViolet"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_shop_id_text_view" />



</androidx.constraintlayout.widget.ConstraintLayout>